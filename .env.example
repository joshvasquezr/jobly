# ─── Google OAuth ─────────────────────────────────────────────────────────────
# Path to credentials.json downloaded from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=~/.config/jobly/credentials.json
# Where to persist the OAuth token after first auth
GOOGLE_TOKEN_PATH=~/.config/jobly/token.json

# ─── Anthropic ────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ─── Paths (can also be set in config.yaml) ───────────────────────────────────
JOBLY_CONFIG_PATH=~/.config/jobly/config.yaml
JOBLY_PROFILE_PATH=~/.config/jobly/profile.json
JOBLY_DB_PATH=~/.local/share/jobly/jobly.db
JOBLY_ARTIFACTS_DIR=~/.local/share/jobly/artifacts
JOBLY_LOG_DIR=~/.local/share/jobly/logs

# ─── Resume ───────────────────────────────────────────────────────────────────
RESUME_DEFAULT_PATH=~/Documents/resume.pdf
# Optional variant paths (JSON object):
# RESUME_VARIANTS={"ml": "~/Documents/resume_ml.pdf", "backend": "~/Documents/resume_be.pdf"}
